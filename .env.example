# HaDerech Application Environment Variables

# App
NEXT_PUBLIC_APP_URL=https://haderech-next.vercel.app
NEXT_PUBLIC_SITE_URL=https://haderech-next.vercel.app
NEXT_PUBLIC_APP_NAME=HaDerech
NEXT_PUBLIC_APP_DESCRIPTION=פלטפורמת למידה מתקדמת לפיתוח תוכנה
NODE_ENV=development

# Skip validation in build
SKIP_ENV_VALIDATION=true

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://rxxwoaxxydmwdhgdryea.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/haderech
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Authentication
NEXTAUTH_URL=https://haderech-next.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-here
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=https://haderech-next.vercel.app/api/auth/callback/google

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-openai-org-id-here

# Email
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=user@example.com
EMAIL_SERVER_PASSWORD=your-password-here
EMAIL_FROM=noreply@example.com

# Analytics
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id-here
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key-here
NEXT_PUBLIC_POSTHOG_HOST=your-posthog-host-here

# Cloud Storage
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name-here
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-cloudinary-api-key-here

# Calendar
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key-here
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id-here

# Payments
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# Redis
REDIS_URL=redis://localhost:6379

# Feature Flags (true or false)
NEXT_PUBLIC_FEATURE_FORUMS=true
NEXT_PUBLIC_FEATURE_GROUPS=true
NEXT_PUBLIC_FEATURE_SIMULATOR=true
NEXT_PUBLIC_FEATURE_BOT=true

# Deployment
VERCEL_URL=haderech-next.vercel.app
VERCEL_ENV=production