#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo '🏗️ בודק טיפוסים, לינטינג ובדיקות...'

# בדיקת טיפוסים
pnpm type-check ||
(
    echo '❌ בדיקת טיפוסים נכשלה. אנא תקן את השגיאות ונסה שוב.'
    false;
)

# בדיקת לינטינג
pnpm lint ||
(
    echo '❌ בדיקת לינטינג נכשלה. אנא תקן את השגיאות ונסה שוב.'
    false;
)

# הרצת בדיקות
pnpm test ||
(
    echo '❌ הבדיקות נכשלו. אנא תקן את השגיאות ונסה שוב.'
    false;
)

echo '✅ כל הבדיקות עברו בהצלחה!' 